<div id="notifications">

</div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">

    <% @lastests.each_with_index do|thuctap,index| %>
       <%  className=""
           if index==0 then className+=" active" end
        %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%=index%>" class="<%= className%>"></li>
    <%end%>
  </ol>
  <div class="carousel-inner">
    <% @lastests.each_with_index do|thuctap,index| %>
      <%
        className = "carousel-item"
        if index==0 then className+=" active" end
      %>
      <div class="<%=className %>">
          <img class="d-block w-100" style="height:300px" src="<%=thuctap.partner_info.logo.url%>" alt="First slide">
          <a href="/partner/<%=thuctap.partner_info.user.id%>/profile"><h3 class="text-sucess text-center"><%= thuctap.partner_info.name %> </h3></a>
      </div>
    <%end%>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%= render partial: "/thuctaps/list_element", collection: @thuctaps, as: :thuctap %>
<div class="mx-auto col-sm-8">
    <%= paginate @thuctaps,window:1  %>
</div>
