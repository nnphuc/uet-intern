            <div class="wrapper-information">
               <strong>Lop: </strong>
               <span><%= current_user.student_fixed_info.lop %></span>
            </div>
            <div class="wrapper-information">
               <strong>Khoa: </strong>
               <span><%= current_user.student_fixed_info.khoa %></span>
            </div>
            <div class="wrapper-information">
               <strong>Nganh: </strong>
               <span><%= current_user.student_fixed_info.nganh %></span>
            </div>


    </div>
    <% else %>
        <h3> vui long them thong tin tai khoan</h3>
    <% end %>
</div>


<% else %>

<% end %>
