<div class="row">
<% if current_user %>


    <% if current_user.student_info %>
    <% info = current_user.student_info %>
    <div class="col-sm-6 col-md-6 col-lg-6">

         <%= image_tag(current_user.student_info.avatar.url(:medium)) %>

        <div class="hr-text">
            <span>WORK</span>
        </div>
        <address>
            <a href="mailto:<%=info.emailcanhan%>" ></a><%= current_user.student_fixed_info.hoten %><br>
            Visit us at:<br>
            <%= current_user.student_fixed_info.diachi%><br>

        </address>

        <div class="hr-text">
                <span>SKILLS</span>
        </div>
        <address>
            <ul class="list-unstyled">
            <li><strong>kinh nghiem:</strong> <%= info.kinhnghiem %></li>
            <li><strong>ngoai ngu:</strong> <%= info.ngoaingu %></li>
        </ul>
        </address>

    </div>
    <div class="col-sm-6 col-md-6 col-lg-6">

           <div>
               <h3><%= current_user.student_fixed_info.hoten %></h3>
               <address>
                    <span class="glyphicon glyphicon-map-marker">
                    </span><%= current_user.student_fixed_info.diachi %><br>
               </address>
           </div>
           <div class="">

           </div>
           <hr class="opacity-75"/>

