<div class="col-sm-10 col-sm-offset-1">
<%= form_for @info,url: {:action => "update" } do |f| %>

    <div class="form-group row">

      <%=f.label :name,class: "col-form-label col-sm-2"%>
      <div class="col-sm-10">

        <%= f.text_field :name,type: "text", class:"form-control",placeholder: "name" %>
      </div>
    </div>

    <div class="form-group row">
      <%=f.label :contact,class: "col-form-label col-sm-2"%>
      <div class="col-sm-10">

        <%= f.text_field :contact,type: "email", class:"form-control",placeholder: "contact" %>
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :address,class: "col-form-label col-sm-2"%>
      <div class="col-sm-10">
        <%= f.text_field :address,type: "text", class:"form-control",placeholder: "address" %>
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :dienthoai,class: "col-form-label col-sm-2"%>
      <div class="col-sm-10">

        <%= f.text_field :dienthoai,type: "text", class:"form-control",placeholder: "Enter phone number" %>
      </div>
    </div>

    <div class="form-group row">
      <%=f.label :logo,class: "col-form-label col-sm-2"%>
      <div class="col-sm-10">

        <%= f.file_field :logo %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-2">

        <%= f.button :submit,class:"btn btn-outline-primary" %>
      </div>
    </div>
<%end%>
</div>
